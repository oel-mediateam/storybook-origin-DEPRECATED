package com.preloader {	import flash.display.MovieClip;	import flash.display.LoaderInfo;	import flash.events.ProgressEvent;	import flash.events.Event;	import flash.text.TextField;		public class Preloader extends MovieClip{		public function Preloader() {			// constructor code		}				public function setLoaderInfo(ldrInf:LoaderInfo):void {			ldrInf.addEventListener(ProgressEvent.PROGRESS, onProgress);			ldrInf.addEventListener(Event.COMPLETE, onComplete);		}				private function onProgress(event:ProgressEvent):void {			var percent:int = Math.round(event.bytesLoaded / event.bytesTotal * 100);			progressingBar_mc.scaleX = percent / 100;			percent_txt.text = percent + "%";		}				private function onComplete(event:Event):void {			dispatchEvent(event);		}	}	}